<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <com.lesogo.cu.custom.xListview.XListView
        android:id="@+id/listView_ware"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@+id/ll_choice"
        android:cacheColorHint="#00000000" />



        <LinearLayout
            android:id="@+id/ll_choice"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y50"
            android:background="@color/colorPrimary"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/x30"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/x10"
                android:paddingRight="5dp"
                android:src="@mipmap/activity_back" />

            <EditText
                android:id="@+id/ed_Searchware"
                android:layout_width="0dp"
                android:layout_height="@dimen/y33"
                android:layout_weight="1"
                android:background="@mipmap/search_bg"
                android:layout_gravity="center_vertical"
                android:focusable="true"
                android:drawableLeft="@mipmap/action_search"
                android:paddingLeft="@dimen/x10"
                android:hint="公牛"
                android:textSize="@dimen/x16"
                android:drawablePadding="@dimen/x10"
                android:focusableInTouchMode="true"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginRight="@dimen/x15"
                android:singleLine="true"
                android:textColor="@color/tv_Black" />

            <!--<View-->
                <!--android:layout_width="1dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="@color/bg_Gray" />-->

            <ImageView
                android:id="@+id/search_page_cart"
                android:layout_width="@dimen/x30"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/x10"
                android:src="@mipmap/home_page_cart" />
        </LinearLayout>

</RelativeLayout>