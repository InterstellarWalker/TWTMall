<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.tianwotian.mytaobao.tao.Tao_F" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y50"
        android:background="@color/colorPrimary"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_home_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@mipmap/home_page_mine" />

        <TextView
            android:id="@+id/tv_top_search"
            android:layout_width="0dp"
            android:layout_height="@dimen/y33"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:text="搜索天沃天商品"
            android:drawableLeft="@mipmap/action_search"
            android:paddingLeft="@dimen/x60"
            android:textColor="#999999"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/search_bg"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_home_cart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@mipmap/home_page_cart" />
    </LinearLayout>

</RelativeLayout>