<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/pop_picture"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y100"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
             />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="打开就发了路口及安防"
                android:maxLines="2"
                android:lines="2"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"

                    android:layout_marginLeft="10dp"
                    android:text="价格"
                    android:textColor="@color/twentyBlack"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/pop_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="29元"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="52dp"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="可获积分"
                    android:textColor="@color/twentyBlack"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/pop_credits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="40"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="21dp"
                    android:textColor="@color/twentyBlack"/>
            </LinearLayout>



        </LinearLayout>


        <ImageView
            android:id="@+id/pop_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:src="@drawable/abc_ic_clear_search_api_holo_light" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="颜色分类" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_Gray" />

            <FrameLayout
                android:id="@+id/type_container"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:orientation="horizontal" >

                <!--<TextView-->
                    <!--android:id="@+id/pop_choice_16g"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_margin="10dp"-->
                    <!--android:background="@drawable/yuanjiao"-->
                    <!--android:paddingBottom="10dp"-->
                    <!--android:paddingLeft="15dp"-->
                    <!--android:paddingRight="15dp"-->
                    <!--android:paddingTop="10dp"-->
                    <!--android:textColor="@color/tv_Black"-->
                    <!--android:text="16G 港版" />-->


            </FrameLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="尺码" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_Gray" />

            <FrameLayout
                android:id="@+id/size_container"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal" >

                <!--<TextView-->
                    <!--android:id="@+id/pop_choice_black"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_margin="10dp"-->
                    <!--android:background="@drawable/yuanjiao"-->
                    <!--android:paddingBottom="10dp"-->
                    <!--android:paddingLeft="15dp"-->
                    <!--android:paddingRight="15dp"-->
                    <!--android:paddingTop="10dp"-->
                    <!--android:textColor="@color/tv_Black"-->
                    <!--android:text="黑  色" />-->


            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_Gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="数量" />

                <TextView
                    android:id="@+id/pop_reduce"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:textColor="@color/tv_Black"
                    android:text="—" />
                <TextView
                    android:id="@+id/pop_num"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:background="@drawable/zhijiao"
                    android:textColor="@color/tv_Black"
                    android:text="1" />
                <TextView
                    android:id="@+id/pop_add"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                     android:padding="10dp"
                    android:textColor="@color/tv_Black"
                    android:textSize="15sp"
                    android:text="+" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_Gray" />
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/bg_Gray_light" />
        </LinearLayout>
    </ScrollView>

    
    <TextView 
        android:id="@+id/pop_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="确定"
        android:textColor="@color/tv_White"
        android:background="@drawable/yuanjiao_red"
        />
    
</LinearLayout>