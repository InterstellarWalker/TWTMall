<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/goods_picture"
        android:layout_width="@dimen/x120"
        android:layout_marginTop="@dimen/y5"
        android:layout_marginLeft="@dimen/x10"

        android:layout_height="@dimen/y120" />

    <LinearLayout
        android:layout_width="@dimen/x240"
        android:layout_height="@dimen/y122"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/y5"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10">
        <TextView
            android:id="@+id/goods_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y44"
            android:paddingBottom="@dimen/x5"
            android:text="公牛王子六三大火拉客户过来谁都卡了鸡蛋干大家更加考虑到骄傲了"
            android:textSize="@dimen/x16"
            android:textColor="@color/twentyBlack"
            android:lines="2"
            android:maxLines="2"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/goods_price"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/y5"
            android:text="¥100"
            android:textSize="@dimen/x16"
            android:textColor="@color/red"
            />
        <TextView
            android:id="@+id/credits_can_get"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="可获积分："
            android:textSize="@dimen/x16"
            android:textColor="@color/fortyBlack"
             />
        <TextView
            android:id="@+id/sales_volume"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="销量："
            android:textSize="@dimen/x16"
            android:textColor="@color/fortyBlack"
            />
        <TextView
            android:background="@color/fiftyBlack"
            android:layout_width="match_parent"
            android:layout_height="1px" />
    </LinearLayout>




</LinearLayout>
